{% extends "Tom32iSiteBundle::layout.html.twig" %}

{% block container_header %}{% endblock %}

{% block content %}
<div id="action" class=" span6 offset3">
    <h1 class="page-header">
        Select a new password
    </h1>

    <div id="delete_box" class="well box">
        <div class="row-fluid">
            {% form_theme form 'Tom32iUserBundle:Form:profile.html.twig' %}
            <form action="{{ path('reset_password', {token: token}) }}" {{ form_enctype(form) }} method="POST" class="reset_password">

                {{ form_widget(form) }}

                <button type="submit" class="btn btn-primary btn-block btn-large">
                    Save
                </button>
            </form>
        </div>
    </div>
</div>
{% endblock content %}