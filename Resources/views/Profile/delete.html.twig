{% extends "Tom32iSiteBundle::layout.html.twig" %}

{% block container_header %}{% endblock %}

{% block content %}
<div id="action" class=" span6 offset3">
    <h1 class="page-header">
        Delete my account
    </h1>

    <div id="delete_box" class="well box">
        <div class="row-fluid">
            {% form_theme form 'Tom32iUserBundle:Form:profile.html.twig' %}
            <form action="{{ path('profile_delete') }}" {{ form_enctype(form) }} method="POST" class="profile_delete">
                <p>If you delete your account, all your data will be definitly removed.</p>

                {{ form_widget(form) }}

                <button type="submit" class="btn btn-danger btn-block btn-large">
                    Goodbye!
                </button>
            </form>
        </div>
    </div>
</div>
{% endblock content %}